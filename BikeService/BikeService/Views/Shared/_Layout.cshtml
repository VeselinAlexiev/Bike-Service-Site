<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BikeService</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS from CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-rbsAq+z1s5sNg5ch5URO9t6MheBndE0QA/4WnCkXWlxjUlg7lO80Y3Cm7pf5jBEm" crossorigin="anonymous">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">

    <!-- Ready-Made Navbar Style from Bootswatch -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/lux/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ6v4B8zRr+K+T94+dZf+RqaMkI49zJahghJYycbDd9zphX8KStcFLy0gR5x" crossorigin="anonymous">
</head>
<body class="d-flex flex-column min-vh-100">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0S4bp62S0v2qNr7bm5tqUt6dtyF4KfB5VQFEoB49jzTOIjJz" crossorigin="anonymous"></script>

    <!-- Navbar with Bootswatch Theme -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="~/img/branding/presta-logo.svg" alt="BikeService" height="40">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-page="/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Service">Service</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Shop">Shop</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/About">About</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <main role="main" class="flex-grow-1 pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted mt-auto py-3 bg-light">
        <div class="container">
            <!-- Footer Top Section -->
            <div class="row">
                <div class="col-md-4">
                    <h5>Contact Us</h5>
                    <p>Email: <a href="mailto:info@bikeservice.com">info@bikeservice.com</a></p>
                    <p>Phone: +1-234-567-890</p>
                    <p>Address: 123 Bicycle Lane, Bike City</p>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-decoration-none" href="/Index">Home</a></li>
                        <li><a class="text-decoration-none" href="/Service">Service</a></li>
                        <li><a class="text-decoration-none" href="/Shop">Shop</a></li>
                        <li><a class="text-decoration-none" href="/About">About</a></li>
                        <li><a class="text-decoration-none" href="/Contact">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Stay Connected</h5>
                    <ul class="list-unstyled">
                        <li><a href="https://facebook.com/bikeservice" target="_blank" class="text-decoration-none">Facebook</a></li>
                        <li><a href="https://instagram.com/bikeservice" target="_blank" class="text-decoration-none">Instagram</a></li>
                        <li><a href="https://twitter.com/bikeservice" target="_blank" class="text-decoration-none">Twitter</a></li>
                    </ul>

                    <h5>Newsletter</h5>
                    <form action="/subscribe" method="post">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Your email" name="email" required>
                            <button class="btn btn-primary" type="submit">Subscribe</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Footer Bottom Section -->
            <div class="row mt-3">
                <div class="col text-center">
                    <p>&copy; 2025 BikeService. All Rights Reserved. | <a href="/Privacy" class="text-decoration-none">Privacy Policy</a></p>
                </div>
            </div>

            @*<!-- Payment Methods -->
            <div class="row mt-2">
                <div class="col text-center">
                    <img src="~/img/payment-methods.png" alt="Payment Methods" height="30">
                </div>
            </div>*@
        </div>
    </footer>

    <!-- Bootstrap JS from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF5go9r0XbwEz2pU6Im4ojNfXlkfL6UJlwXtWrglM4CbvoFWW" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>