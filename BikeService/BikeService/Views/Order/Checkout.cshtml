    @model BikeService.Web.ViewModel.Order.CheckoutViewModel

    @{
        ViewData["Title"] = "Checkout";
    }

    <div class="container mt-5 text-light">
        <h2 class="text-warning fw-bold mb-4 text-center">🛒 Checkout</h2>

        <form method="post" asp-action="ConfirmCheckout" asp-controller="Order">
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label asp-for="Address" class="form-label text-warning">Delivery Address</label>
                    <input asp-for="Address" class="form-control bg-dark text-white border-warning" placeholder="Enter your address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label text-warning">Phone Number</label>
                    <input asp-for="Phone" class="form-control bg-dark text-white border-warning" placeholder="Enter your phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label text-warning">Payment Method</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="Cash on Delivery" checked />
                    <label class="form-check-label text-black">
                        Cash on Delivery
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" disabled />
                    <label class="form-check-label text-muted">
                        Bank Transfer (Coming Soon)
                    </label>
                </div>
            </div>

            <div class="text-center mb-4">
                <h4 class="text-warning">Total: @Model.TotalAmount.ToString("C")</h4>
            </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-warning btn-lg fw-bold shadow animate__animated animate__pulse">Confirm Order</button>

            <div class="p-2 bg-dark border border-warning rounded text-center mt-2">
                <a href="/Shop/Cart" class="btn btn-outline-warning fw-bold w-100">
                    ← Back to Cart
                </a>
            </div>
        </div>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }