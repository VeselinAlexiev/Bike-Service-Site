@model IEnumerable<BikeService.Data.Entities.Workshop>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Manage Workshops</h2>
<a class="btn btn-success mb-3" asp-action="Create">Add New Workshop</a>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Coordinates</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var w in Model)
        {
            <tr>
                <td>@w.Name</td>
                <td>@w.Location</td>
                <td>@w.Latitude, @w.Longitude</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@w.Id">Edit</a>
                    <form asp-action="Delete" asp-route-id="@w.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>