@model IEnumerable<BikeService.Data.Entities.Bicycle>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Manage Bicycles</h2>
<a class="btn btn-success mb-3" asp-action="Create">Add New Bicycle</a>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>Model</th>
            <th>Brand</th>
            <th>Year</th>
            <th>Type</th>
            <th>Price</th>
            <th>Eco</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bike in Model)
        {
            <tr>
                <td>@bike.Model</td>
                <td>@bike.Brand</td>
                <td>@bike.Year</td>
                <td>@bike.Type</td>
                <td>$@bike.Price</td>
                <td>@(bike.EcoFriendly ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@bike.Id">Edit</a>
                    <form asp-action="Delete" asp-route-id="@bike.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
