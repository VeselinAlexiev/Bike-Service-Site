@model IEnumerable<BikeService.Data.Entities.SparePart>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Manage Spare Parts</h2>
<a class="btn btn-success mb-3" asp-action="Create">Add New Spare Part</a>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Compatibility</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model)
        {
            <tr>
                <td>@part.Name</td>
                <td>$@part.Price</td>
                <td>@part.StockQuantity</td>
                <td>@part.Compatibility</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@part.Id">Edit</a>
                    <form asp-action="Delete" asp-route-id="@part.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>