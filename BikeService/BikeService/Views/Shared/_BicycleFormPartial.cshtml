@model BikeService.Data.Entities.Bicycle

<input type="hidden" asp-for="Id" />

<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            <label asp-for="Model" class="form-label"></label>
            <input asp-for="Model" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Brand" class="form-label"></label>
            <input asp-for="Brand" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Type" class="form-label"></label>
            <input asp-for="Type" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label"></label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label asp-for="Material" class="form-label"></label>
            <input asp-for="Material" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="BatteryCapacity" class="form-label"></label>
            <input asp-for="BatteryCapacity" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="EnergySource" class="form-label"></label>
            <input asp-for="EnergySource" class="form-control" />
        </div>
        <div class="form-check mb-3">
            <input asp-for="EcoFriendly" class="form-check-input" />
            <label asp-for="EcoFriendly" class="form-check-label"></label>
        </div>
    </div>
</div>