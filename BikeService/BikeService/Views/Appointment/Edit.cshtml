@model BikeService.Data.Entities.Appointment

@{
    ViewData["Title"] = "Edit Appointment";
}

<div class="container mt-5 text-light">
    <h2 class="text-warning fw-bold mb-4">📝 Edit Appointment</h2>

    <div class="card bg-dark border-warning shadow">
        <div class="card-body">
            <h5 class="card-title text-warning">@Model.Workshop.Name</h5>
            <p class="card-text">
                <strong>Current Date:</strong> @Model.AppointmentDate.ToString("dddd, dd MMM yyyy")<br />
                <strong>Current Time:</strong> @Model.AppointmentDate.ToString("HH:mm")
            </p>
            <form method="post" action="/Appointment/Edit/@Model.Id">
                <div class="mb-3">
                    <label class="form-label">New Date</label>
                    <input type="date" name="newDate" class="form-control bg-dark text-white border-warning"
                           min="@DateTime.Today.AddDays(2).ToString("yyyy-MM-dd")" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">New Time</label>
                    <select name="newTime" class="form-select bg-dark text-white border-warning" required>
                        @for (int h = 9; h <= 17; h++)
                        {
                            <option>@h:00</option>
                        }
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="/Appointment/MyAppointments" class="btn btn-outline-light">← Back</a>
                    <button type="submit" class="btn btn-warning fw-bold">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>