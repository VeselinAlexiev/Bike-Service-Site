@using BikeService.Web.ViewModel.Shop;
@model ShopItemViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4 text-white">
    <div class="row">
        <div class="col-md-6 animate__animated animate__fadeInLeft">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow w-100" style="object-fit: cover; max-height: 500px;" alt="@Model.Name" />
        </div>
        <div class="col-md-6 animate__animated animate__fadeInRight">
            <h2 class="text-warning fw-bold">@Model.Name</h2>
            <p class="mt-3">@Model.Description</p>
            <h4 class="fw-bold text-warning">@Model.Price.ToString("C")</h4>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Type:</strong> @Model.Type</p>

            <form asp-action="AddToCart" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-success btn-lg fw-bold shadow">Add to Cart</button>
            </form>
        </div>
    </div>
</div>